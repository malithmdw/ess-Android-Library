<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_toast_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/custom_toast_height"
    tools:context="com.ess.essandroidbaselibrary.util.uIUtilities.CustomToastMessage">

        <RelativeLayout
            android:id="@+id/toast_image_layout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/custom_toast_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="0"
            android:gravity="center">

            <ImageView
                android:id="@+id/custom_toast_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:padding="5dp"
                android:paddingLeft="8dp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/toast_text_layout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/custom_toast_height"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="right"
            android:layout_toEndOf="@+id/toast_image_layout"
            android:layout_toRightOf="@+id/toast_image_layout"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/custom_toast_message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_weight="0.8"
                android:contentDescription="string_toast"
                android:gravity="left|center"
                android:paddingLeft="20dp"
                android:textColor="@color/white"
                android:textSize="@dimen/custom_toast_text_size" />

        </RelativeLayout>

</RelativeLayout>